{% extends 'dashboard/dashboardAdmin.html.twig' %}

{% block title %}Matières{% endblock %}

{% block body %}
    <div class="main-container">
        <div class="pd-ltr-20 xs-pd-20-10">
            <div class="min-height-200px">
                <div class="page-header">
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <div class="title">
                                <h4>Navigation</h4>
                            </div>
                            <nav aria-label="breadcrumb" role="navigation">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="{{ path('dashboard_admin') }}">Accueil</a></li>
                                    <li class="breadcrumb-item" aria-current="page" ><a href="{{ path ('matiere_index')}}">Gestion des Matières</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Ajouter</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
                <div class="pd-20 card-box mb-30">
                    <div class="clearfix">
                        {#                        <div class="pull-left">#}
                        {#                            <h4 class="text-blue h4" style="margin-left: 83px"> Les informations de :</h4>#}
                        {#                        </div>#}
                    </div>
                    {{ form_start(matiereform) }}
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Matière</label>
                        <div class="col-sm-12 col-md-10">
                            {{ form_row(matiereform.nomMatiere, {'attr': {'class':'form-control'}, 'label':false}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Domaine</label>
                        <div class="col-sm-12 col-md-10">
                            {{ form_row(matiereform.domaineMatiere, {'attr': {'class':'form-control'}, 'label':false}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Niveau</label>
                        <div class="col-sm-12 col-md-10">
                            {{ form_row(matiereform.niveau, {'attr': {'class':'form-control'}, 'label':false}) }}
                        </div>
                    </div>

                    <div style="text-align: right">
                        <input type="submit" class="btn btn-outline-primary" value="Ajouter" />
                    </div>
                    {{ form_end(matiereform) }}
                </div>
            </div>

        </div>
    </div>


{% endblock %}

