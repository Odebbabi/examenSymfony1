{% extends 'dashboard/dashboardAdmin.html.twig' %}

{% block title %}Maitres{% endblock %}

{% block body %}
    <div class="main-container">
        <div class="pd-ltr-20 xs-pd-20-10">
            <div class="min-height-200px">
                <div class="page-header">
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <div class="title">
                                <h4>Navigation</h4>
                            </div>
                            <nav aria-label="breadcrumb" role="navigation">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="{{ path('dashboard_admin') }}">Accueil</a></li>
                                    <li class="breadcrumb-item" aria-current="page" ><a href="{{ path ('user_eleve_index')}}">Gestion des El√®ves </a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Editer</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
                <div class="pd-20 card-box mb-30">
                    <div class="clearfix">
                        <div class="pull-left">

                        </div>
                    </div>
                    {{ form_start(form) }}
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Nom Complet</label>
                        <div class="col-sm-12 col-md-10">
                            {{ form_row(form.fullName, {'attr': {'class':'form-control'}, 'label':false}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Email</label>
                        <div class="col-sm-12 col-md-10">
                            {{ form_row(form.email, {'attr': {'class':'form-control'}, 'label':false}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-datetime-local-input" class="col-sm-12 col-md-2 col-form-label">Date de
                            naissance</label>
                        <div class="col-sm-12 col-md-10">
                            {{ form_row(form.dateBirth, {'attr': {'class':'form-control datetimepicker'}, 'label':false}) }}

                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Num Carte Inscription</label>
                        <div class="col-sm-12 col-md-10">
                            {{ form_row(form.numCarteInscription, {'attr': {'class':'form-control'}, 'label':false}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Niveau</label>
                        <div class="col-sm-12 col-md-10">
                            {{ form_row(form.niveau, {'attr': {'class':'form-control'}, 'label':false}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Carte d'Inscription</label>
                        <div class="col-sm-12 col-md-10">
                            {{ form_row(form.imageCarteInscription, {'attr': {'class':'form-control'}, 'label':false}) }}
                        </div>
                    </div>
                    <div style="text-align: right">
                        <input type="submit" class="btn btn-outline-primary" value="Editer" />
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </div>


{% endblock %}

{% block javascript %}
{{ parent() }}
<script>
  $(document).ready(function(){
        $(".vich-image img").css('width','450');
        $(".vich-image img").css('height','220');
    })
</script>
{% endblock %}