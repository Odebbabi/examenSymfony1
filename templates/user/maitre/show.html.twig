{% extends 'dashboard/dashboardAdmin.html.twig' %}

{% block title %}Maitres{% endblock %}

{% block body %}
    <div class="main-container">
        <div class="pd-ltr-20 xs-pd-20-10">
            <div class="min-height-200px">
                <div class="page-header">
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <div class="title">
                                <h4>Navigation</h4>
                            </div>
                            <nav aria-label="breadcrumb" role="navigation">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="{{ path('dashboard_admin') }}">Accueil</a></li>
                                    <li class="breadcrumb-item" aria-current="page"><a href="{{ path ('user_maitre_index')}}">Gestion des Maitre(sse) </a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Voir</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
                <div class="pd-20 card-box mb-30">
                    <div class="clearfix">
                        <div class="pull-left">

                        </div>
                    </div>
                    <form>
                        <div class="form-group row">
                            <label class="col-sm-12 col-md-2 col-form-label">Nom Complet</label>
                            <div class="col-sm-12 col-md-10">
                                <input class="form-control" type="text" value="{{ user.fullName }}" readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-12 col-md-2 col-form-label">Email</label>
                            <div class="col-sm-12 col-md-10">
                                <input class="form-control" value="{{ user.email }}" type="email" readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="example-datetime-local-input" class="col-sm-12 col-md-2 col-form-label">Date de naissance</label>
                            <div class="col-sm-12 col-md-10">
                                <input class="form-control" type="text" value=" {{ user.dateBirth|date('d-m-Y')  }} " readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-12 col-md-2 col-form-label">Spécialité</label>
                            <div class="col-sm-12 col-md-10">
                                <input class="form-control" value="{{ user.specialty }}" type="text" readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-12 col-md-2 col-form-label">Num CIN</label>
                            <div class="col-sm-12 col-md-10">
                                <input class="form-control" value="{{ user.numCin }}" type="tel" readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-12 col-md-2 col-form-label">CIN Avant</label>
                            <div class="col-sm-12 col-md-10">
                                <img class="form-control"  src="{{ asset('user/images/' ~ user.cinAvant) }}" style= "width: 450px ;height:220px"
                                readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-12 col-md-2 col-form-label">CIN arrière</label>
                            <div class="col-sm-12 col-md-10">
                                <img class="form-control"  src="{{ asset('user/images/' ~ user.cinArriere) }}" style= "width: 450px ;height:220px"
                                     readonly>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>


{% endblock %}

