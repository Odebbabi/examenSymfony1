{% endblock %}
{% block body %}
    <section class="breadcrumb breadcrumb_bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner text-center">
                        <div class="breadcrumb_iner_item">
                            <h2>Valider le quiz </h2>
                            <p>Acceuil<span>/</span>quiz</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="course_details_area section_padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 course_details_left">
                    <div class="main_image">
                        <img class="img-fluid" src="{{ asset('home/img/single_cource.png') }}" alt="">
                    </div>
                </div>
                <div class="section-top-border" style="margin: auto; width: 85%; padding: 10px;">
                    <div class="row">
                        <div class="col-lg-8 col-md-8">
                            <h3 class="mb-30">{{ quiz.nomQuiz }}</h3>

                            {% for question in quiz.getQuestion %}
                                <div class="single-element-widget mt-30">
                                    <h4 class="mb-30">{{ question.nomQuestion }}</h4>
                                    {% for items,proposition in question.getProposition %}
                                        <div class="switch-wrap d-flex justify-content-between">
                                            <p>{{ items+1 }} . {{ proposition.nomProposition }}</p>
                                            <div class="primary-radio">
                                                <input type="checkbox" id="{{ question.id }}-{{ proposition.id }}"
                                                       name="{{ question.id }}response">
                                                <label for="{{ question.id }}-{{ proposition.id }}"></label>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endfor %}
                            <a href="#" class="btn_4"
                               style="margin-left: 511px;margin-top: 20px;text-align: center;">Valider</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>




{% endblock %}
