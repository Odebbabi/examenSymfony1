{% extends 'dashboard/dashboardMaitre.html.twig' %}
{% block title %}Quiz{% endblock %}

{% block body %}
    <style>
        #quiz_form_question {
            display: grid;
        }
    </style>
    <div class="main-container">
        <div class="pd-ltr-20 xs-pd-20-10">
            <div class="min-height-200px">
                <div class="page-header">
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <div class="title">
                                <h4>Navigation</h4>
                            </div>
                            <nav aria-label="breadcrumb" role="navigation">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="{{ path('dashboard_user_maitre') }}">Accueil</a></li>
                                    <li class="breadcrumb-item" aria-current="page" ><a href="{{ path ('quiz_index')}}">Gestion des Quiz</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Ajouter</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
                <div class="pd-20 card-box mb-30">
                    <div class="clearfix">
                    </div>
                    {{ form_start(quizform,{'enctype':'multipart/form-data'}) }}
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Quiz</label>
                        <div class="col-sm-12 col-md-10">
                            {{ form_row(quizform.nomQuiz, {'attr': {'class':'form-control'}, 'label':false}) }}
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-10">
                        {{ form_row(quizform.createdAt, {'attr': {'class':'form-control','style':'display:none'}, 'label':false}) }}
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Matière</label>
                        <div class="col-sm-12 col-md-10">
                            {{ form_row(quizform.matiere, {'attr': {'class':'form-control'}, 'label':false}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Difficulté</label>
                        <div class="col-sm-12 col-md-10">
                            {{ form_row(quizform.difficulte, {'attr': {'class':'form-control'}, 'label':false}) }}
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-10">
                        {{ form_row(quizform.numQuestion, {'attr': {'class':'form-control','style':'display:none'}, 'label':false}) }}
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Questions</label>
                        <div class="col-sm-12 col-md-10" >
                            {{ form_row(quizform.question, {'label':false}) }}
                        </div>
                    </div>
                    {#<div class="col-sm-12 col-md-10">
                        {{ form_row(quizform.comments, {'attr': {'class':'form-control','style':'display:none'}, 'label':false}) }}
                    </div>#}
                    {#<div class="col-sm-12 col-md-10">
                        {{ form_row(quizform.user, {'attr': {'class':'form-control','style':'display:none'}, 'label':false}) }}
                    </div>#}



                    <div style="text-align: right">
                        <input type="submit" class="btn btn-outline-primary" value="Ajouter" />
                    </div>
                    {{ form_end(quizform) }}
                </div>
            </div>

        </div>
    </div>


{% endblock %}

