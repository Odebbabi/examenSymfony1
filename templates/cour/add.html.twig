{% extends 'dashboard/dashboardMaitre.html.twig' %}
{% block title %}Cours{% endblock %}

{% block body %}
    <div class="main-container">
        <div class="pd-ltr-20 xs-pd-20-10">
            <div class="min-height-200px">
                <div class="page-header">
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <div class="title">
                                <h4>Navigation</h4>
                            </div>
                            <nav aria-label="breadcrumb" role="navigation">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                                    <li class="breadcrumb-item" aria-current="page" ><a href="{{ path ('cour_index')}}">Gestion des Cours</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Ajouter</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
                <div class="pd-20 card-box mb-30">
                    <div class="clearfix">
                    </div>
                    {{ form_start(courform,{'enctype':'multipart/form-data'}) }}
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Cour</label>
                        <div class="col-sm-12 col-md-10">
                            {{ form_row(courform.nomCour, {'attr': {'class':'form-control'}, 'label':false}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Description</label>
                        <div class="col-sm-12 col-md-10">
                            {{ form_row(courform.descriptionCour, {'attr': {'class':'form-control'}, 'label':false}) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Mati√®re</label>
                        <div class="col-sm-12 col-md-10">
                            {{ form_row(courform.matiere, {'attr': {'class':'form-control'}, 'label':false}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Fichier</label>
                        <div class="col-sm-12 col-md-10">
                            {{ form_row(courform.imageFile, {'attr': {'class':'form-control'}, 'label':false}) }}
                        </div>
                        <span class="error">{{ form_errors(courform.imageFile) }}</span>

                    </div>

                    <div class="col-sm-12 col-md-10">
                        {{ form_row(courform.comments, {'attr': {'class':'form-control','style':'display:none'}, 'label':false}) }}
                    </div>
                    <div class="col-sm-12 col-md-10">
                        {{ form_row(courform.user, {'attr': {'class':'form-control','style':'display:none'}, 'label':false}) }}
                    </div>

                    <div style="text-align: right">
                        <input type="submit" class="btn btn-outline-primary" value="Ajouter" />
                    </div>
                    {{ form_end(courform) }}
                </div>
            </div>
            <div class="footer-wrap pd-20 mb-20 card-box">
                DeskApp - Bootstrap 4 Admin Template By <a href="https://github.com/dropways" target="_blank">Ankit
                    Hingarajiya</a>
            </div>
        </div>
    </div>


{% endblock %}

