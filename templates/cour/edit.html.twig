{% extends 'dashboard/dashboardMaitre.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
    <div class="main-container">
        <div class="pd-ltr-20 xs-pd-20-10">
            <div class="min-height-200px">
                <div class="page-header">
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <div class="title">
                                <h4>Navigation</h4>
                            </div>
                            <nav aria-label="breadcrumb" role="navigation">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="{{ path('dashboard_user_maitre') }}">Accueil</a></li>
                                    <li class="breadcrumb-item" aria-current="page" ><a href="{{ path ('cour_index')}}">Gestion des Cours</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Editer</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
                <div class="pd-20 card-box mb-30">
                    <div class="clearfix">
                        {#                        <div class="pull-left">#}
                        {#                            <h4 class="text-blue h4" style="margin-left: 83px"> Les informations de :</h4>#}
                        {#                        </div>#}
                    </div>
                    {{ form_start(courform) }}
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Cour</label>
                        <div class="col-sm-12 col-md-10">
                            {{ form_row(courform.nomCour, {'attr': {'class':'form-control'}, 'label':false}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Description</label>
                        <div class="col-sm-12 col-md-10">
                            {{ form_row(courform.descriptionCour, {'attr': {'class':'form-control'}, 'label':false}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Niveau</label>
                        <div class="col-sm-12 col-md-10">
                            {{ form_row(courform.matiere, {'attr': {'class':'form-control'}, 'label':false}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Fichier</label>
                        <div class="col-sm-12 col-md-10">
                            {{ form_row(courform.imageFile, {'attr': {'class':'form-control'}, 'label':false}) }}
                        </div>
                        <span class="error">{{ form_errors(courform.imageFile) }}</span>
                    </div>



                    <div style="text-align: right">
                        <input type="submit" class="btn btn-outline-primary" value="Editer" />
                    </div>
                    {{ form_end(courform) }}
                </div>
            </div>

        </div>
    </div>


{% endblock %}

