{% extends 'dashboard/dashboardEleve.html.twig' %}

{% block title %}Examen detail{% endblock %}

{% block header %}
    <header class="main_menu single_page_menu">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <nav class="navbar navbar-expand-lg navbar-light">
                        <a class="navbar-brand logo_1" href="{{ path('dashboard_user_eleve') }}"> <img
                                    src="{{ asset('home/img/Web-School logo white.png') }}" alt="logo" style="width: 250px"> </a>
                        <a class="navbar-brand logo_2" href="{{ path('dashboard_user_eleve') }}"> <img
                                    src="{{ asset('home/img/Web-School logo.png') }}" alt="logo" style="width: 250px"> </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse"
                                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse main-menu-item justify-content-end"
                             id="navbarSupportedContent">
                            <ul class="navbar-nav align-items-center">
                                <li class="nav-item ">
                                    <a class="nav-link " href="{{ path('dashboard_user_eleve') }}">Acceuil</a>
                                </li>
                                <li class="nav-item ">
                                    <a class="nav-link" href="{{ path('cour_eleve_index') }}" >Cours</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link"
                                       href="{{ path('exercice_eleve_index') }}"
                                    >Exercices</a>
                                </li>
                                <li class="nav-item"active>
                                    <a class="nav-link"
                                       href="{{ path('exam_eleve_index') }}" style="color:#FF8C00"
                                    >Examens</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link"
                                       href="{{ path('quiz_eleve_index') }}"
                                    >Quiz</a>
                                </li>
                                <li class="d-none d-lg-block">
                                    <a class="btn_1"
                                       href="{{ path('app_logout') }}"
                                    >Déconnecter</a>
                                </li>

                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>
{% endblock %}
{% block body %}
    <section class="breadcrumb breadcrumb_bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner text-center">
                        <div class="breadcrumb_iner_item">
                            <h2>Détail examen </h2>
                            <p>Acceuil<span>/</span>Examens<span>/</span>détail</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="course_details_area section_padding">
        <h2 class="title_top"
            style="text-align: center;margin-top: -89px; font-size:27px;margin-bottom: 50px">{{ exam.matiere.nomMatiere }} </h2>

        <div class="container">
            <div class="row">
                <div class="col-lg-8 course_details_left">
                    <div class="main_image">
                        <img class="img-fluid" src="{{ asset('home/img/education 2.jpg') }}" alt="">
                    </div>
                    <div class="content_wrapper">
                        {#                        <h4 class="title_top">Description du cour</h4>#}
                        {#                        <div class="content">#}
                        {#                            {{ cour.descriptionCour }}#}
                        {#                        </div>#}


                        <h4 class="title">Examens de la même Matière </h4>
                        <div class="content">
                            <ul class="course_list">

                                {% for examen in exams %}
                                    {% if examen.Id != exam.Id %}
                                        <li class="justify-content-between align-items-center d-flex">
                                            <p> examen de la {{ examen.semestre }} trimestre</p>
                                            <a class="btn_2 text-uppercase" href="{{ path('exam_eleve_show',{'id':examen.id}) }}">Voir détail</a>
                                        </li>
                                    {% endif %}
                                {% endfor %}

                            </ul>
                        </div>
                    </div>
                </div>


                <div class="col-lg-4 right-contents">
                    <div class="sidebar_top">
                        <ul>
                            <li>
                                <a class="justify-content-between d-flex">
                                    <p>Préparé par:</p>
                                    <span class="color">{{ exam.user.fullName }}</span>
                                </a>
                            </li>
                            <li>
                                <a class="justify-content-between d-flex">
                                    <p>Niveau </p>
                                    <span class="color">{{ exam.matiere.niveau.numNiveau }}</span>
                                </a>
                            </li>
                            <li>
                                <a class="justify-content-between d-flex">
                                    <p>Trimestre </p>
                                    <span class="color">{{ exam.semestre }}</span>
                                </a>
                            </li>
                            <li>
                                <a class="justify-content-between d-flex">
                                    <p>Type </p>
                                    <span class="color">{{ exam.typeExam }}</span>
                                </a>
                            </li>
                        </ul>
                        <a href="{{ asset('examens/' ~ exam.pdf.name) }}" class="btn_1 d-block" target="_blank">Consulter l'examen</a>
                        <a href="{{ asset('examens/' ~ exam.correction.name) }}" class="btn_1 d-block" target="_blank">Consulter la correction</a>
                    </div>

                    <div class="feedeback">
                        <h6>Vos réactions</h6>
                        {{ form_start(commentform) }}

                        {{ form_row(commentform.text , {'attr': {'class':'form-control'}, 'label':false}) }}

                        <input type="submit" class="btn_4" value="Envoyer" style="margin-top: 20px;margin-left: 266px"/>
                        {{ form_end(commentform) }}

                    </div>
                    <h4 class="title">Commentaires</h4>
                    <div class="comments-area mb-30">
                        {% for comment in comments %}

                            <div class="comment-list">
                                <div class="single-comment single-reviews justify-content-between d-flex">
                                    <div class="user justify-content-between d-flex">
                                        <div class="thumb">
                                            <img src="{{ asset('home/img/cource/avatar.jpg') }}" alt="">
                                        </div>
                                        <div class="desc">
                                            <h5><a href="#">{{ comment.user.fullName }}</a>
                                            </h5>
                                            <p class="comment">
                                                {{ comment.text }}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>




{% endblock %}
